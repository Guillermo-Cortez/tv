-# frozen_string_literal: true
= simple_form_for(@host) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :first_name
    = f.input :last_name
    = f.input :sex
    = f.input :age

  .form-actions
    = f.button :submit
